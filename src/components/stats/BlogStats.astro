---

import { 
  Card,
  CardTitle,
  CardHeader,
  CardContent,
  CardFooter
} 
from "@/src/components/hybrid-astro-ui/card"

type BlogData = {
        title: string;
        description: string;
        count: number;
    };

interface Props {
    blogData: BlogData[];
    title:string;
    description:string;
}

const { blogData, title, description } = Astro.props as Props;


---


<section class="w-full  flex items-center justify-center px-4 flex-col mt-10 mb-20">
    <div class="w-full max-w-5xl  flex flex-col items-center justify-center gap-4">
        <h1 class="text-4xl md:text-5xl playfair-font font-medium text-center leading-tight ">
            {title}
        </h1>
        <h2 class="text-lg md:text-xl text-center opacity-80 max-w-3xl">
            {description}
        </h2>
    </div>

    <div class="w-full max-w-5xl my-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
       {
            blogData.map((data) => (
                <Card class="bg-transparent">
                    <CardHeader>
                        <CardTitle class="text-center">{data.title}</CardTitle>
                    </CardHeader>
                    <CardContent>
                        <p class="text-6xl font-bold text-center font-mono text-muted-foreground">{data.count}</p>
                    </CardContent>
                    <CardFooter class="text-sm ">
                        <p class=" text-[0.8rem] opacity-75 text-center">{data.description}</p>
                    </CardFooter>
                </Card>
            ))
       }


  

</section>