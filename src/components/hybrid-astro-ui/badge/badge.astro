---
import { cls } from '@/src/lib/utils';

interface Props {
  class?: string;
  variant?: 'default' | 'secondary' | 'outline' | 'destructive';
}

const { class: className, variant = 'default' } = Astro.props as Props;
---

<div
  class={cls(
    'border rounded-2xl px-3 py-0.5 text-sm not-prose flex items-center justify-center gap-0.5 [&_svg]:w-4 [&_svg]:h-4 [&_svg]:mt-0.5',
    variant === 'default' && 'bg-primary text-white',
    variant === 'secondary' && 'bg-secondary text-secondary-foreground',
    variant === 'outline' && 'bg-background border-input',
    variant === 'destructive' && 'bg-destructive text-white',
    className
  )}
>
  <slot />
</div>
