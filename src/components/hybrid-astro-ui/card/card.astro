---
import { cls } from '@/src/lib/utils';

interface Props {
  class?: string;
}

const { class: className } = Astro.props as Props;
---

<article
  class={cls(
    'border border-border text-foreground rounded-2xl bg-secondary w-full p-4 flex flex-col gap-5 justify-between shadow-inner ',
    className
  )}
>
  <slot />
</article>
